{
	"name": "google-drive-vscode",
	"displayName": "Google Drive",
	"description": "Google Drive support for VSCode",
	"author": {
		"name": "Gustavo Cassel",
		"email": "guscassel@gmail.com"
	},
	"publisher": "Gustavo Cassel",
	"version": "0.0.1",
	"icon": "img/icon.png",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:google.drive.fetchFiles",
		"onCommand:google.drive.uploadCurrentFile",
		"onCommand:google.drive.uploadSelectedFile",
		"onView:driveView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "google.drive.fetchFiles",
				"title": "Google Drive: Fetch files from Drive"
			},
			{
				"command": "google.drive.uploadCurrentFile",
				"title": "Google Drive: Upload current file to Drive"
			},
			{
				"command": "google.drive.uploadSelectedFile",
				"title": "Google Drive: Upload selected file to Drive"
			},
			{
				"command": "google.drive.createFolder",
				"title": "Google Drive: Create folder on Drive"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "driveActivityBar",
					"title": "Google Drive",
					"icon": "img/icon.png"
				}
			]
		},
		"views": {
			"driveActivityBar": [
				{
					"id": "driveView",
					"name": "Google Drive"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "google.drive.createFolder",
					"when": "view == driveView",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "google.drive.uploadSelectedFile",
					"group": "drive"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@types/mime-types": "^2.1.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode": "1.1.36",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"coffee-register": "^2.2.0",
		"gapi": "0.0.3",
		"googleapis": "^39.2.0",
		"mime": "^2.4.6",
		"mime-types": "^2.1.27"
	}
}